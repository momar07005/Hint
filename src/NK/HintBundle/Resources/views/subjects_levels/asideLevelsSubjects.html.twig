<aside class="aside">
	<div class="aside-title">
	   	Niveaux
	</div>
    <ul>
    	{% for cycle in listeCycles %}
    		<div class="cycle">
	    		<a href="{{ path('nk_hint_subjectsPerLevel', { 'nomCycle' : cycle.nomCycle }) }}">
		    		<li>{{cycle.nomCycle}}</li>
		    	</a>
		    </div>

	    		{% for niveau in listeNiveaux %}
	    			{% if niveau.cycle.id == cycle.id %} 
	    				<div class="level-name" style="border-left-color:{{niveau.couleurNiveau}}">
	    					<a href="{{ path('nk_hint_subjectsPerLevel', { 'nomNiveau' : niveau.nomNiveau }) }}">
		    						{{niveau.nomNiveau}}
		    				</a>
		    			</div>
	    			{% endif %}
	    		{% endfor %}
    	
 	   		<br><br>
    	{% endfor %}
    </ul>
</aside>