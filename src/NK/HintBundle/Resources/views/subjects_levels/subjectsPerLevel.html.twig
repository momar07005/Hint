{% extends 'NKHintBundle::layout.html.twig' %}
{% block NKHintBundle_content %}
	<div class="card-container">
		{% if listeMatieres is not null %}
			{% for matiere in listeMatieres %}
				<a href="{{ path('nk_hint_subjectsPerLevel', { 'idNiveau': matiere.niveau.id, 'idMatiere': matiere.nomMatiere}) }}">
					<div class="subject-card">
						<div class="subject-title">
							{{matiere.nomMatiere}}
						</div>
						<img src="{{asset('subject_icons/mathsIcon.jpg')}}" alt="Mathématiques" class="subject-img"> 
						<div class="subject-inf">
							Et là les informations sur la matière
						</div>
					</div>
				</a>
			{% endfor %}
		{% endif %}
	</div>
{% endblock NKHintBundle_content %}