<div class="row">
	<div id="sup-header" class="col-sm-12">
		{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<!--<a id="btn-login" class="btn btn-danger" href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>-->
				<div id="user-menu" class="dropdown">
					<a class="dropdown-toggle username" data-toggle="dropdown" href="#"><i class="glyphicon glyphicon-user">{{app.user.username}}</i></a>
					<ul class="dropdown-menu">
                        <li>
                            <div class="navbar-login">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="text-center">
                                            <span class="glyphicon glyphicon-user icon-size"></span>
                                        </p>
                                    </div>
                                    <div class="col-lg-8">
                                        <p class="text-left"><strong>{{app.user.Prenom}} {{app.user.nom}}</strong></p>
                                        <p class="text-left small">{{app.user.email}}</p>
                                        <p class="text-left">
                                            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger btn-block btn-sm btn-google">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <div class="navbar-login navbar-login-session">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <p>
                                        	<a href="#" class="btn btn-primary btn-block btn-facebook">Mon profile</a>
                                            <a href="#" class="btn btn-danger btn-block btn-google">Changer mot de passe</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
				</div>
		{% else %}
			<a id="btn-login" class="btn btn-success login" href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
			<a id="btn-login" class="btn register" href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
		{% endif %}
	</div>
</div>
<div id="main-header">
	<a id="logo" href="{{ path('homepage') }}"></a>
	 <input type="text" class="form-control" placeholder="Entrez votre recherche">
